{
  "name": "trading-capital",
  "private": true,
  "version": "0.0.0",
  "main": "build/main/main.js",
  "scripts": {
    "dev": "npm run main:build-ts && concurrently \"npm run renderer:dev\" \"npm run main:watch\" \"npm run main:nodemon\"",
    "renderer:dev": "vite",
    "renderer:build": "vue-tsc -p ./renderer/tsconfig.json --noEmit && vite build",
    "renderer:serve": "vite preview",
    "main:nodemon": "NODE_ENV=development nodemon --watch build/main --exec 'electron .'",
    "main:watch": "npm-watch",
    "main:build-ts": "tsc --project main/tsconfig.json",
    "main:start": "electron-forge start",
    "main:package": "electron-forge package",
    "main:make": "npm run renderer:build && npm run main:build-ts && electron-forge make",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "watch": {
    "main:build-ts": {
      "patterns": [
        "main"
      ],
      "extensions": "ts,js",
      "quiet": false,
      "runOnChangeOnly": true
    }
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.2",
    "@vueuse/core": "^8.2.0",
    "daisyui": "^2.13.3",
    "date-fns": "^2.28.0",
    "electron-context-menu": "^3.1.2",
    "electron-squirrel-startup": "^1.0.0",
    "lodash": "^4.17.21",
    "numeral": "^2.0.6",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@tsconfig/node16": "^1.0.2",
    "@types/lodash": "^4.14.180",
    "@types/node": "^17.0.23",
    "@types/numeral": "^2.0.2",
    "@vitejs/plugin-vue": "^2.2.0",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "electron": "^17.2.0",
    "nodemon": "^2.0.15",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.12",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vue-tsc": "^0.29.8"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "trading_capital"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
